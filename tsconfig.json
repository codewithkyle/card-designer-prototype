{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {
			"components/*": ["components/*"],
			"lib/*": ["lib/*"],
			"types/*": ["types/*"],
			"utils/*": ["utils/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
